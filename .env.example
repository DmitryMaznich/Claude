# Anthropic Claude API Key
# Get it from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxx

# Telegram Bot Token
# Get it from: @BotFather in Telegram
TELEGRAM_BOT_TOKEN=123456:ABC-DEF

# Your Telegram Chat ID (operator's ID)
# Get it from: @userinfobot in Telegram
OPERATOR_CHAT_ID=123456789

# Server Port (optional, default: 3000)
PORT=3000

# ========================================
# Planfix CRM Integration
# ========================================
# Get your API token from: Настройки аккаунта -> API доступ -> REST API

# Enable/Disable Planfix integration
PLANFIX_ENABLED=false

# Your Planfix account subdomain (e.g., mycompany from mycompany.planfix.ru)
PLANFIX_ACCOUNT=your-account

# API Token from Planfix settings
PLANFIX_API_TOKEN=your-api-token-here

# Project ID where tasks will be created
PLANFIX_PROJECT_ID=your-project-id

# Optional: Custom API URL (default: https://api.planfix.ru)
# PLANFIX_API_URL=https://api.planfix.ru
